{
  "name": "project-name",
  "description": "Project description",
  "version": "0.0.1",
  "homepage": "http://<homepage-project>",
  "author": "Firstname Lastname <mail@example.com> (http://example.com)",
  "contributors": [
    "Firstname Lastname <mail@example.com> (http://example.com)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://<homepage-project>"
  },
  "engines": {
    "node": "^8",
    "npm": "^5"
  },
  "license": "LICENSE",
  "private": true,
  "main": "./app/app.js",
  "config": {
    "defineEnv": "./node_modules/.bin/cross-env"
  },
  "scripts": {
    "build": "$npm_package_config_defineEnv NODE_ENV=production",
    "dev": "$npm_package_config_defineEnv NODE_ENV=development",
    "test": "$npm_package_config_defineEnv NODE_ENV=test",
    "lint": "./node_modules/.bin/eslint -c .eslintrc ./app/",
    "precommit": "npm run lint",
    "preparecommitmsg": "node ./workflow/commit-msg-hook.js",
    "commitmsg":
      "./node_modules/.bin/commitlint --config ./workflow/commitlint.config.js --edit $GIT_PARAMS",
    "release":
      "./node_modules/.bin/release-it --config ./workflow/release-it.json",
    "clean": "./node_modules/.bin/rimraf"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "babel-eslint": "^8.0.3",
    "conventional-changelog-cli": "^1.3.22",
    "cross-env": "^5.1.1",
    "eslint": "^4.13.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.3.1",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "release-it": "^7.4.3",
    "rimraf": "^2.6.2"
  },
  "dependencies": {}
}
